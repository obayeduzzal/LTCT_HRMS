@model LICT_HRMS.Models.EmployeeLeaveCountHistory

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Employee Leave Count History</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Employee Leave Count History</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Employee Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>

        <dt>
            Earned Leave
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EarnLeaveDays)
        </dd>

        <dt>
            Without Pay Leave
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WithoutPayLeaveDays)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
