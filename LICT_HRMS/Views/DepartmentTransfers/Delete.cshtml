@model LICT_HRMS.Models.DepartmentTransfer

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Department Transfer</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Department Transfer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Employee Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>

        <dt>
            From Designation
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FromDesignation.Name)
        </dd>

        <dt>
            To Designation
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ToDesignation.Name)
        </dd>

        <dt>
            Transfer Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TransferDate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
