@model IEnumerable<LICT_HRMS.Models.Branch>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Branches</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="myTable" class="table table-striped dt-responsive display" cellspacing="0" width="100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            Openning Time
        </th>
        <th>
            Ending Time
        </th>
        <th>
            Late Consideration Time
        </th>
        <th>
            Late Consideration Date
        </th>
        <th>
            Deduction Percantage
        </th>
        <th>
           OverTime Consideration Time
        </th>
        <th>
           Overtime Payment
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LateConsiderationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LateConsiderationDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LateDeductionPercentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OvertimeConsiderationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OvertimePaymentPercentage)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
